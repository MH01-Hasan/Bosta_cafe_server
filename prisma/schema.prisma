generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  username   String   @unique
  password   String @ignore
  email      String?
  role       RoleUser @default(admin)
  contactNo  String
  address    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("users")
}

model Category {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]

  @@map("categoryes")
}



model Product {
  id           String    @id @default(uuid())
  name         String
  price        String
  flavor       String?
  productImage Json?
  discount     String?
  size         String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  categoryId   String
  category     Category  @relation(fields: [categoryId], references: [id])

  @@map("products")
}

enum RoleUser {
  admin
  saler
}
